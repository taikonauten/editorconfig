# Taiko Editorconfig
root = true

[**]
charset = utf-8
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length = off

[*.js]
max_line_length = 120

[*.{html, phtml}]
max_line_length = 120

[*.{md, markdown, txt}]
max_line_length = off
trim_trailing_whitespace = false

[*.{php,phtml}]
indent_size = 4
max_line_length = 120
